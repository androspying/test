    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.0",
    "lint-staged": "^15.2.7",
    "stylelint": "^16.6.1",
    "stylelint-config-prettier-scss": "^1.0.0",
